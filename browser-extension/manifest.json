{
  "manifest_version": 3,
  "name": "图片搜索与二维码解析器",
  "version": "1.0",
  "description": "右键搜索图片，解析二维码，支持自定义搜索引擎",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "图片搜索与二维码解析"
  },
  "options_page": "options.html"
}